skinparam ranksep 1.5

entity "Utilisateur" {
  --
  UserName
  Email
  Password
}

entity "Movies" {
  --
  Title
  ReleaseYear
  Duration
  Synopsis
}

entity "People" {
  --
  FirstName
  LastName
  BirthDate
  Nationality
}

entity "Genres" {
  --
  GenreName
}

entity "Reviews" {
  --
  User
  Comment
  Rating
  ReviewDate
  Movie
